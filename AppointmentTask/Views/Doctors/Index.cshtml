@model List<AppointmentTask.Models.Appointment>

@{
    ViewData["Title"] = "Doctor Dashboard";
}

<h2>My Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Appointment Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Patient.Email</td>
                <td>@appointment.AppointmentTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@appointment.Status</td>
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@appointment.Id" asp-route-status="Confirmed" class="btn btn-success">Confirm</a>
                    <a asp-action="UpdateStatus" asp-route-id="@appointment.Id" asp-route-status="Completed" class="btn btn-primary">Complete</a>
                    <a asp-action="UpdateStatus" asp-route-id="@appointment.Id" asp-route-status="Cancelled" class="btn btn-danger">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
