@model IEnumerable<AppointmentTask.Models.Appointment>

<h2>Appointments</h2>
<a class="btn btn-primary" asp-action="Create">Schedule New Appointment</a>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Patient?.Email</td>
                <td>@appointment.Doctor?.Email</td>
                <td>@appointment.AppointmentTime</td>
                <td>@appointment.Status</td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@appointment.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@appointment.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
