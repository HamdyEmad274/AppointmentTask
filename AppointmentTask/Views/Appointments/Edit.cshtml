@model AppointmentTask.Models.Appointment

<h2>Edit Appointment</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="AppointmentTime">Date & Time</label>
        <input asp-for="AppointmentTime" type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
