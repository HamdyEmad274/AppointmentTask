@model AppointmentTask.DTOs.AppointmentDTO

<h2>Schedule New Appointment</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DoctorId">Select Doctor</label>
        <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control" required>
            <option value="">-- Select Doctor --</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentTime">Date & Time</label>
        <input asp-for="AppointmentTime" type="datetime-local" class="form-control" required />
        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
    </div>

    @if (!User.Identity?.IsAuthenticated??true)
    {
        <div class="form-group">
            <label asp-for="Email">Email (for guests only)</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    }


    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
