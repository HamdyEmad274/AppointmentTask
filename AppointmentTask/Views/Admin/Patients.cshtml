@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

<h2>Patients</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@patient.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
